<p id="notice"><%= notice %></p>

<h1>カテゴリー</h1>

<table>

  <tbody>
    <div class="card-deck">
    <% @tags.each do |tag| %>
      <div class="card-deck text-center record-index">
        <div class="card text-dark bg-light mb-3 folder mr-4 ml-4">
          <div class="card-body">
            <h2 class="card-title"><%= tag.name %></h2>
            <a><%= link_to '表示', tag %></a>
            <a><%= link_to '編集', edit_tag_path(tag) %></a>
            
          </div>
        </div>
      </div>     
    <% end %>
  </tbody>
</table>

