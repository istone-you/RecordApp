<p id="notice"><%= notice %></p>

<h1>タグ</h1>

<table>
  <thead>
    <tr>
      <th>タグ名</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tags.each do |tag| %>
      <tr>
        <td><%= tag.name %></td>
        <td><%= link_to '表示', tag %></td>
        <td><%= link_to '編集', edit_tag_path(tag) %></td>
        <td><%= link_to '削除', tag, method: :delete, data: { confirm: '削除しますか?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'タグを作成', new_tag_path %>
