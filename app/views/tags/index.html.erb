<p id="notice"><%= notice %></p>

<div class="text-center">
  <h3 class="rec-tag">Tag</h3>
</div>

<div class="tag-show-card">
<table>

  <tbody>
    
    <div class="co folreccard">  
      <% @tags.each do |tag| %>
        <div class ="tag-card mr-4 ml-4 mb-4"> 
          <% if tag.image? %><%=link_to image_tag(tag.image.url, class: "tag-img"),tag %><% else %> <%=link_to tag do %><img class="tag-img" src="assets/folder.png"><% end %><% end %>   
          <h6 class=" text-center mt-2"><%= tag.name.truncate(14) %></h6>
        </div>
        <% end %>  
    </div>
    
  </tbody>
</table>
</div>

<br>

<div><%= link_to image_tag("plus.png"), new_tag_path, class: "fixed-btn"  %></div>
