<div class="co folreccard">
  <% @tag.records.all.each do |record| %>
    <% if record.done == 1 %>
        <div class="card text-dark bg-light folder record-card">
          <% if record.image? %>
            <%= link_to image_tag(record.image.url, class: "card-img-top record-img"),folder_record_path(record.folder,record)  %>
          <% else %>
            <% if record.youtube? %>
              <%=  link_to folder_record_path(record.folder,record) do%>
                <img src="https://i.ytimg.com/vi/<%= record.youtube.last(11) %>/hqdefault.jpg" class= "card-img-top record-img">
              <% end %>  
            <% else %>  
              <%=  link_to image_tag("no_image.png", class: "card-img-top record-img"),folder_record_path(record.folder,record) %>
            <% end %>  
          <% end %>
          <div class="card-body">
            <h5 class="card-title text-center"><%= record.title.truncate(16) %></h5>
            <h4><span class="badge rounded-pill bg-secondary text-white record-count"><% if record.count? %><%= record.count %><% end %></span></h4>
            
          　<h6 class="record-hour"><% if record.hours? %><%= record.hours %>時間<% end %><% if record.minutes? %><%= record.minutes %>分<% end %> <% if record.money? %>¥<%= record.money %><% end %></h6>
          </div>
        </div> 
      <% end %> 
  <% end %>   
</div>