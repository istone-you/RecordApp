<p id="notice"><%= notice %></p>

<div class= "index-header">
  <div class= "back-btn">
      <%= link_to image_tag("back.png"),categories_path, class: "d-inline-block  mb-3" %>
  </div>
</div> 

<div class="cat-show-card">

<a><%= link_to  "編集", edit_category_path(@category), class: "r-btn", style: "position: absolute; top: 4px; right: 10px;" %></a>

<div class="text-center">
  <h3 class="folder-title rec-cat"><%= @category.name %></h3>
</div>

  <div class="co folreccard">
    <div class ="folder-card text-center mr-1 ml-1">
      <div><%= link_to image_tag("folder.png", class:"folder-img"), category_all_records_path(@category) %></div>
      <div class="mt-3"><h5 class="rec-fol">ALL</h5></div>
    </div>  
    
    <% @category.folders.each do |folder| %>
      <div class ="text-center folder-card mr-2 ml-2">
        <div>
          <% if folder.image? %>
            <%=link_to image_tag(folder.image.url, class: "folder-img"),folder_records_path(folder.id) %>
          <% else %>
            <%= link_to image_tag("folder.png", class:"folder-img"), folder_records_path(folder.id) %>
          <% end %>
        </div>
        <div class="mt-3">
          <h5 class="rec-fol"><%= folder.title.truncate(15)%>(<%= folder.record_sum %>)</h5>
        </div>
      </div>  
    <% end %> 
  </div>  
  
  </div>

<div><%= link_to image_tag("plus.png"), new_folder_path(category_id: @category.id), class: "fixed-btn"  %></div>
