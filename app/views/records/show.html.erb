<p id="notice"><%= notice %></p>

<div class= "index-header">
</div>  

<div class= "back-btn">
  <%= link_to image_tag("back.png"),folder_records_path, class: "d-inline-block  mb-3" %>
</div>
<div class="text-center">
  <h3 class="folder-title">
    <%= @record.title %>
  </h3>
  
  <div class="co">
    <% @record.tag2s.each do |tag| %>
        <div>
          <h6 class="badge badge-secondary mr-1"><%= tag.name %></h6>
        </div>
    <% end %>
  </div><br>
  
  <div>
    <% if @record.count? %> 
      <h3 class=""><%= @record.count %><% end %><% if @record.goal_count? %> / <%= @record.goal_count %></h3>
    <% end %> 
  </div>  
    
  <h3>
    <% if @record.hours? %>
     <%= @record.hours %>時間
    <% end %> 
    <% if @record.minutes? %>
     <%= @record.minutes %>分
    <% end %> 
  </h3>
  
  <h3>
    <% if @record.money? %>
      ¥<%= @record.money %>
    <% end %>   
  </h3>
  
  <p>
    <%= @record.coment %>
  </p>
  
  <p>
    <% if @record.image? %>
      <%= image_tag @record.image.url, class: "record-img" %>
    <% end %>  
  </p>
  
  <p>
    <% if @record.youtube? %>
      <iframe width="560" height="315" src="https://www.youtube.com/embed/<%= @record.youtube.last(11) %>" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
    <% end %>  
  </p>
  <p>
    <% if @record.twitter? %> 
      <blockquote class="twitter-tweet tw-align-center">
      <a href="<%= @record.twitter %>"></a></blockquote>
      <script async src="https://platform.twitter.com/widgets.js" charset="utf-8"></script>
    <% end %>  
  </p>
  <p>
    <strong>リンク</strong>
    <a href="<%= @record.link %>"><%= @record.link %></a>
  </p>
  
  <p>
    <strong>Done?</strong>
    <% if @record.done == 1 %>
     <p>Yes</p>
    <% end %> 
  </p>
  
  
  

  <p>
    <strong>最終更新時間</strong>
    <%= @record.updated_at.strftime('%Y年%m月%d日 %H時%M分%S秒') %>
  </p> 
  
  
  <%= link_to '編集', edit_folder_record_path %>
</div>


