
<div class= "back-btn">
  <%= link_to image_tag("back.png"),folder_records_path, class: "d-inline-block  mb-3 " %>
</div>

<div class="record-form text-center">
<%= form_with(model: [@folder, @record], local: true) do |form| %>
  <% if record.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(record.errors.count, "error") %> prohibited this record from being saved:</h2>

      <ul>
      <% record.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="field">
    <%= form.label :done, "Done or Want to?" %>
    <%= form.select :done, [['Want to', 0],['Done', 1]]%>
  </div>    

  <div class="field">
    <%= form.label :title, "タイトル" %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <h6>カウント</h6>
    <%= form.number_field :count %> / <%= form.number_field :goal_count %>
  </div>
  
  <div class="field">
    <%= form.number_field :hours %> 時間 <%= form.number_field :minutes, max: "59" %> 分
  </div>
  
  <div class="field">
    ¥<%= form.number_field :money %>
  </div>

  <div class="field">
    <%= form.label :coment, "コメント"%>
    <%= form.text_area :coment, class: "coment-field" %>
  </div>
  
  <div class="field">
    <%= form.label :link, "リンク"%>
    <%= form.text_area :link %>
  </div>
  
  <div class="field">
    <%= form.label :youtube, "Youtube"%>
    <%= form.text_area :youtube %>
  </div>
  
  <div class="field">
    <%= form.label :twitter, "Twitter"%>
    <%= form.text_area :twitter %>
  </div>
  
  <div class="field">
    <%= form.label :image, "画像をアップロード" %><br>
    <%= form.file_field :image %>
  </div>
  
  <div class="check_box">
    <span>タグ</span>
    <%= form.collection_check_boxes(:tag2_ids, Tag2.all, :id, :name) do |tag2| %>
     <div>
       <%= tag2.label do %>
         <%= tag2.check_box %>
         <%= tag2.text %>
       <% end %>
     </div>
   <% end %>
 </div>
 
 <div class="field">
    <%= form.label :created_at, "時間" %>
    <%= raw sprintf(
    form.datetime_select(
      :create_at,# プロパティ名
      {
        use_two_digit_numbers: true,# 月日を2桁の値で表示
        date_separator: '%s',# 年, 月
        datetime_separator: '%s',# 日
        time_separator: '%s'# 時
      },# オプション
      { class: 'date-select' }# htmlオプションを指定する場合は別で指定
    ),
    '年 ', '月 ', '日 ', '時 ') + '分'# 分 は最後につけ加えられる
    %>
  </div>

  <div class="actions">
    <%= form.submit "完了"%>
  </div>
<% end %>
</div>
