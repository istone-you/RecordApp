<p id="notice"><%= notice %></p>

<div class= "index-header">
  <div class="text-center select-div">
      <%= form_with(model: @folder,remote: true,id: 'form1') do |form| %>
        |
        <div class="d-inline-block">
          <%= form.select :record_sort, [['Create Desc', 0],['Create Asc', 1],['Update Desc', 2],['Update Asc', 3]], {}, {class: 'sel select'}%>
        </div>
        |
        <div class="d-inline-block">
          <%= form.select :done_view, [[' Done', 0],['Want to', 1]], {}, {class: 'sel'}%>
        </div> 
        |
        <div class="d-inline-block">
          <%= form.select :record_view, [['Normal', 0],['All info', 1],['Coment', 8],['Image', 2],['Link', 3],['Youtube', 4],['Twitter', 5],['Calendar', 6],['Graph', 7],['Map', 9]], {}, {class: 'sel'}%>
        </div> 
        |
        <br>
        <div class="d-inline-block">
          <%= form.submit "◯", :class=>"view-btn"%>
        </div>  
      <% end %> 
    </div>
</div>



<h3 class="text-center folder-title"><%= @folder.title %></h3>
<h5><span class="badge rounded-pill bg-secondary text-white"><% unless @folder.count_sum == 0 %><%= @folder.count_sum %><% end %></span></h5>
<h5><% unless @folder.money_sum == 0 %>¥<%= @record_money_sum %><% end %></h5>
<div class="flex-row">
  <h5 class="d-inline-flex"><% unless @folder.hour_sum == 0 %><%= @record_hours_sum %>時間<% end %></h5>
  <h5 class="d-inline-flex"><% unless @folder.minute_sum == 0 %><%= @record_minutes_sum %>分<% end %></h5>
</div>
<div><%= link_to image_tag("plus.png"), new_folder_record_path, class: "fixed-btn"  %></div>
<div class="co">
<% @folder.categories.each do |category| %>
    <div>
      <h6 class="badge badge-secondary mr-1"><%=link_to category.name,category_path(category.id), class: "" %></h6>
    </div>
<% end %>
</div><br>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    
    <% if @folder.done_view == 0 %>
     <%= render "records/done_index" %>
    <% end %>
    
    <% if @folder.done_view == 1 %>
      <%= render "records/want_index" %>
    <% end %> 
    
  </tbody>
</table>

<a><%= link_to  image_tag("tag.png", class: "manage-tag-img"), tags_path, class: "manage-tag" %></a>
<a><%= link_to  image_tag("show-edit.png", class: "edit-btn-img"), edit_folder_path(@folder), class: "edit-btn" %></a>

