<% if @folder.record_view == 0 %>
  <div class="co folreccard">
    <% @records.each do |record| %>
      <% if record.done == 0 %>
          <div class="r-letter ml-2 mr-2 mb-2 mt-2" style="width: 198px; height: 300px; ">
            <div class="mt-2">  
            <% if record.image? %>
              <%= link_to image_tag(record.image.url, class: "record-img"),folder_record_path(record.folder,record)  %>
            <% else %>
              <% if record.youtube? %>
                <%=  link_to folder_record_path(record.folder,record) do%>
                  <img src="https://i.ytimg.com/vi/<%= record.youtube.last(11) %>/hqdefault.jpg" class= "record-img">
                <% end %>  
              <% else %>  
                <%=  link_to image_tag("no_image.png", class: "record-img"),folder_record_path(record.folder,record) %>
              <% end %>  
            <% end %>
            </div>
            <div class="text-center">
              <h5 class=""><%= record.title.truncate(16) %></h5>
            　<h6 style="margin-top: -20px;"><span class="badge rounded-pill bg-secondary text-white"><% if record.count? %><%= record.count %><% end %></span><% if record.hours? %><%= record.hours %>時間<% end %><% if record.minutes? %><%= record.minutes %>分<% end %> <% if record.money? %>¥<%= record.money %><% end %></h6>
            </div>
          </div> 
      <% end %>
    <% end %>
  </div>
<% end %>

<% if @folder.record_view == 1 %>
  <%=render "records/all_info_want" %>
<% elsif @folder.record_view == 2 %>
  <%=render "records/only_img_want" %>
<% elsif @folder.record_view == 3 %>
  <%= render "records/link_want" %>
<% elsif @folder.record_view == 4 %>
  <%= render "records/youtube_want" %>
<% elsif @folder.record_view == 5 %>
  <%= render "records/twitter_want" %>
<% end %>
 
