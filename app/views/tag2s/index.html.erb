<p id="notice"><%= notice %></p>

<h1>タグ</h1>

<table>
  <thead>
    <tr>
      <th>タグ名</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tag2s.each do |tag2| %>
      <tr>
        <td><%= tag2.name %></td>
        <td><%= link_to '表示', tag2 %></td>
        <td><%= link_to '編集', edit_tag2_path(tag2) %></td>
        <td><%= link_to '削除', tag2, method: :delete, data: { confirm: '削除しますか?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

